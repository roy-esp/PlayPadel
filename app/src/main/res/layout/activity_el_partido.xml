<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content" tools:context=".PrimerActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:background="#81c1ccd9"
        android:id="@+id/linearLayout"
        android:baselineAligned="true"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="IrHome"
            android:text="AtrÃ¡s" />

        <TextView
            android:id="@+id/elPartidoId"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:text="El partido"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/jugador4Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button4"
                android:layout_alignStart="@+id/button4"
                android:layout_below="@+id/button5"
                android:layout_marginTop="53dp"
                android:text="Jugador 4"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="200dp" />

            <TextView
                android:id="@+id/jugador3Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button6"
                android:layout_alignLeft="@+id/jugador4Id"
                android:layout_alignStart="@+id/jugador4Id"
                android:text="Jugador 3"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="200dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="279dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#009688"
                android:elevation="0dp"
                android:onClick="IrBuscarPartido"
                android:text="Finalizar Partido"
                android:textColor="@android:color/background_light"
                android:textColorLink="#009688"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="413dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="136dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/jugador1Id"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:text="Quitar jugador"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="232dp"
                tools:layout_editor_absoluteY="290dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="136dp"
                android:layout_height="37dp"
                android:text="Quitar Jugador"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="232dp"
                tools:layout_editor_absoluteY="200dp"
                android:layout_alignBaseline="@+id/jugador4Id"
                android:layout_alignBottom="@+id/jugador4Id"
                android:layout_alignLeft="@+id/button9"
                android:layout_alignStart="@+id/button9" />

            <Button
                android:id="@+id/button9"
                android:layout_width="136dp"
                android:layout_height="37dp"
                android:layout_alignLeft="@+id/button5"
                android:layout_alignStart="@+id/button5"
                android:layout_alignTop="@+id/elPartidoId"
                android:text="Quitar Jugador"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="232dp"
                tools:layout_editor_absoluteY="200dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="136dp"
                android:layout_height="37dp"
                android:layout_alignLeft="@+id/button2"
                android:layout_alignStart="@+id/button2"
                android:layout_below="@+id/button2"
                android:layout_marginTop="20dp"
                android:text="Quitar Jugador"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="232dp"
                tools:layout_editor_absoluteY="110dp" />

            <TextView
                android:id="@+id/jugador2Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jugador 2"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="290dp"
                android:layout_alignTop="@+id/button5"
                android:layout_alignLeft="@+id/jugador4Id"
                android:layout_alignStart="@+id/jugador4Id" />

            <TextView
                android:id="@+id/jugador1Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/jugador2Id"
                android:layout_alignStart="@+id/jugador2Id"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="38dp"
                android:text="Jugador 1"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="110dp" />


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>