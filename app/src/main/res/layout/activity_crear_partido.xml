<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content" tools:context=".MainActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="false"
        android:weightSum="1"
        android:background="#81c1ccd9"
        android:id="@+id/linearLayout"
        android:baselineAligned="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="false">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Crear Partido"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TimePicker
            android:id="@+id/simpleTimePicker"
            android:layout_width="286dp"
            android:layout_height="206dp"
            android:layout_gravity="center_horizontal"
            android:timePickerMode="spinner"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="152dp" />

        <DatePicker
            android:id="@+id/datePicker4"
            android:layout_width="290dp"
            android:layout_height="94dp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="49dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radiobuttona"
                android:layout_width="114dp"
                android:layout_height="35dp"
                android:text="Por c'odigo postal"
                tools:layout_editor_absoluteX="184dp"
                tools:layout_editor_absoluteY="378dp"
                android:layout_marginTop="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/button2" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="101dp"
                android:layout_height="33dp"
                android:text="Mi zona"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="378dp"
                android:layout_marginEnd="11dp"
                android:layout_above="@+id/button2"
                android:layout_alignEnd="@+id/button2" />

            <Button
                android:id="@+id/button2"
                android:layout_width="259dp"
                android:layout_height="59dp"
                android:background="#009688"
                android:text="Crear Partido"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="426dp"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/radiobuttona"
                android:layout_centerHorizontal="true" /> <!-- time picker mode of a time picker -->

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>