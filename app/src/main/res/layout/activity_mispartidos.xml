<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content" tools:context=".MainActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:background="#81c1ccd9"
        android:id="@+id/linearLayout"
        android:baselineAligned="true"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:text="Mis Partidos"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="279dp"
                android:layout_height="70dp"
                android:backgroundTint="#009688"
                android:elevation="0dp"
                android:text="Buscar partido"
                android:textColor="@android:color/background_light"
                android:textColorLink="#009688"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="413dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="136dp"
                android:layout_height="37dp"
                android:text="Partido finalizado"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="232dp"
                tools:layout_editor_absoluteY="290dp"
                android:layout_marginEnd="12dp"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/button6"
                android:layout_width="136dp"
                android:layout_height="37dp"
                android:text="Partido finalizado"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="232dp"
                tools:layout_editor_absoluteY="200dp"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignStart="@+id/button5" />

            <Button
                android:id="@+id/button5"
                android:layout_width="136dp"
                android:layout_height="37dp"
                android:text="Partido finalizado"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="232dp"
                tools:layout_editor_absoluteY="110dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/button2"
                android:layout_alignStart="@+id/button2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sábado-29 Octubre"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="290dp"
                android:id="@+id/textView5"
                android:layout_alignTop="@+id/button5"
                android:layout_alignStart="@+id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miércoles-26 Octubre"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="200dp"
                android:layout_marginTop="53dp"
                android:layout_below="@+id/button5"
                android:layout_alignStart="@+id/button4" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunes-24 Octubre "
                android:textSize="18sp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="110dp"
                android:layout_below="@+id/textView13"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginTop="38dp" />



        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>